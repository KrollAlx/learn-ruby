<div class="row mt-4">
  <div class="col"></div>
  <div class="col-6">
    <h2 class="text-center">Авторизация</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <label class="form-label">Электронная почта</label> <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <label class="form-label">Пароль</label> <br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <label class="form-check-label">Запомнить меня</label>
          </div>
        </div>
      <% end %>

      <%= f.submit "Войти", class: "btn btn-danger text-black" %>
    <% end %>

    <%= link_to 'Регистрация', new_user_registration_path, class: "btn btn-danger text-black mt-4" %>
  </div>
  <div class="col"></div>
</div>
