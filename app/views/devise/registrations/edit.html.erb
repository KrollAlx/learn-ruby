<div class="row mt-4">
  <div class="col"></div>
  <div class="col-6">
    <h2 class="text-center">Редактирование профиля</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <label class="form-label">Электронная почта</label> <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
      </div>

      <div class="mb-3">
        <label class="form-label">Пароль</label> <i>(оставьте пустым, если не хотите изменить его)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <br />
          <em>(минимум <%= @minimum_password_length %> символов)</em>
        <% end %>
      </div>

      <div class="mb-3">
        <label class="form-label">Подтверждение пароля</label><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="mb-3">
        <label class="form-label">Текущий пароль</label><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <%= f.submit "Изменить", class: "btn btn-danger text-black" %>
    <% end %>

    <%= button_to "Выйти из учетной записи", destroy_user_session_path, class: "btn btn-danger text-black mt-4", method: :delete %>

    <%= link_to "Назад", :back, class: "nav-link text-black mt-4" %>
  </div>
  <div class="col"></div>
</div>
