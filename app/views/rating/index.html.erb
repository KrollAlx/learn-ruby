<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Место</th>
      <th scope="col">Email</th>
      <th scope="col">Рейтинг</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= user.email %></td>
      <td><%= user.rating %></td>
    </tr>
  <% end %>
  </tbody>
</table>
